<Page x:Class="WpfApp1.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PartnerTB" Grid.Row="0"  FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>

        <ListView x:Name="LV" Grid.Row="1" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="5,5,5,5" BorderThickness="1,1,1,1" BorderBrush="Black" Padding="10">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="{Binding NameProduct}"/>
                                <TextBlock Text="{Binding Kolichectvo}"/>
                                <TextBlock Text="{Binding Data}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <Button x:Name="BackButton" Grid.Row="2" Content="Назад" Margin="10" Click="BackButton_Click"/>
    </Grid>
</Page>