<Page x:Class="WpfApp1.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Список партнеров" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>

        <ListView x:Name="LV" Grid.Row="1" HorizontalContentAlignment="Stretch" MouseDoubleClick="LV_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="5,5,5,5" BorderThickness="1,1,1,1" BorderBrush="Black" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Type_Name}"/>
                                <TextBlock Text="{Binding FIO}"/>
                                <TextBlock Text="{Binding Telephone}"/>
                                <TextBlock Text="{Binding Rey}"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="{Binding Discont}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <Button x:Name="AddButton" Grid.Row="2" Content="Добавить партнера" Margin="10" Click="AddButton_Click"/>
        <Button x:Name="HistoryButton" Grid.Row="3" Content="История реализации продукци" Margin="10" Click="HistoryButton_Click"/>
    </Grid>
</Page>
