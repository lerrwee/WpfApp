<Page x:Class="WpfApp1.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="EditPage">
    <ScrollViewer>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Название партнера" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="1" Content="Тип партнера" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="2" Content="Фамилия директора" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="3" Content="Имя директора" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="4" Content="Отчество директора" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="5" Content="Адрес компании" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="6" Content="Телефон компании" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="7" Content="Почта компании" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="8" Content="ИНН" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="9" Content="Рейтинг" Margin="10"></Label>

        <TextBox Grid.Column="1" Grid.Row="0" x:Name="NameTextBox" Margin="10"></TextBox>
        <ComboBox Grid.Column="1" Grid.Row="1" x:Name="Partner_type_ComboBox" Margin="10"></ComboBox>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="Familia_directorTextBox" Margin="10"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="Name_directorTextBox" Margin="10"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="4" x:Name="Othestvo_directorTextBox" Margin="10"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="5" x:Name="AdressTextBox" Margin="10"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="6" x:Name="TelephoneTextBox" Margin="10"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="7" x:Name="EmailTextBox" Margin="10"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="8" x:Name="InnTextBox" Margin="10"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="9" x:Name="ReitingTextBox" Margin="10"></TextBox>

        <Button Grid.Column="1" Grid.Row="10" x:Name="SaveButton" Margin="10" Content="Сохранить" Click="SaveButton_Click"></Button>
        <Button Grid.Column="1" Grid.Row="11" x:Name="BackButton" Margin="10" Content="Назад" Click="BackButton_Click"></Button>
    </Grid>
    </ScrollViewer>
</Page>
